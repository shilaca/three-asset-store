{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "sourceMap": false,
    "composite": true,
    "rootDir": "./src",
    "outDir": "dist",
    "isolatedModules": true,
    "types": ["vite/client"]
  },
  "files": ["@types/module-shim.d.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "spec"]
}
